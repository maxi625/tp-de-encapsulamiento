class Estudiante:
    
    def __init__(self, nombre, edad):
        self.__nombre = nombre
        self.__edad = edad
        self.__notas = []

    def agregar_nota(self, nota):
        if 0 <= nota <= 100:
            self.__notas.append(nota)
            print(f"Nota {nota} agregada correctamente.")
        else:
            print("La nota debe estar entre 0 y 100.")

    def calcular_promedio(self):
        if len(self.__notas) == 0:
            return 0
        return sum(self.__notas) / len(self.__notas)

    def mostrar_informacion(self):
        print(f"Nombre: {self.__nombre}")
        print(f"Edad: {self.__edad}")
        print(f"Notas: {self.__notas}")
        print(f"Promedio: {self.calcular_promedio():.2f}")

    def get_nombre(self):
        return self.__nombre

    def get_edad(self):
        return self.__edad

    def get_notas(self):
        return self.__notas


estudiante1 = Estudiante("Ana LÃ³pez", 17)
estudiante1.agregar_nota(85)
estudiante1.agregar_nota(92)
estudiante1.agregar_nota(78)

estudiante1.mostrar_informacion()
