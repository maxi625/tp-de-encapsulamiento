class persona:
    def __init__(self,nombre,edad,sexo):
        self.__nombre=nombre
        self.__edad=edad
        self.__sexo=sexo

    def cambiar_edad(self,edad):
        self.__edad=edad

    def mostrar(self):
        print(self.__nombre,self.__edad,self.__sexo)

persona=persona("maxi",17, "masculino")
persona.mostrar()
persona.cambiar_edad(18)
persona.mostrar()
